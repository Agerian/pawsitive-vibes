
{{#each posts as |post|}}  
  <h2>{{post.title}}</h2> 
  <p>{{post.content}}</p>

  <h3>Comments:</h3>
  {{#if post.comments}} {{!-- Only display if 'comments' list has data --}}
    <ul> 
      {{#each post.comments as |comment|}} 
        <li>{{comment.content}}</li> 
      {{/each}} 
    </ul> 
  {{else}} {{!-- Display No comments message --}}
    <p>No comments posted yet for this entry!</p> 
  {{/if}}

  <h3>Add a New Comment:</h3>
   <form>
    <textarea name="content" class="comment-text" placeholder="Enter new comment here"></textarea> 
    <button class="commbutton" type="submit">Submit</button> 
  </form> 

{{/each}}

<script src="/js/comment.js"></script>